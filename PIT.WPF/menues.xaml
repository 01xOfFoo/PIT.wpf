<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ContextMenu x:Key="ProjectContextMenu">
        <MenuItem Header="Edit project" Command="{Binding EditProject}"/>
        <MenuItem Header="Delete project" Command="{Binding DeleteProject}"/>
    </ContextMenu>
    <ContextMenu x:Key="IssueContextMenu">
        <MenuItem Header="Edit issue" Command="{Binding EditIssue}"/>
        <MenuItem Header="Delete issue" Command="{Binding DeleteIssue}"/>
    </ContextMenu>
</ResourceDictionary>